#!/usr/bin/env bash
imageName="$(echo "$1" | cut -d'|' -f 1)"
component="$(echo "$1" | cut -d'|' -f 2)"
shift

if [[ "$component" == "" ]] ; then
  parent="soleco";
else
  parent="soleco/$component";
  prefix="$component/"
fi

for folder in $imageName/$parent/*
do
  if [[ -d $folder ]] ;  then
    folderName="$(basename $folder)"
    if [[ "$folderName" != "_"* ]] ; then $@ "$prefix$folderName" $imageName; fi
  fi
done
