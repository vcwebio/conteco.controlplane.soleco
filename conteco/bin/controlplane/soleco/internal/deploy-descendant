#!/usr/bin/env bash
imageName="$1"
component="$2"
if [[ "$3" = "true" ]] ; then recurse="--recurse"; fi
shift; shift; shift;
if [[ "$component" == "." ]] ; then
  parent="soleco";
else
  parent="soleco/$component";
  prefix="$component/"
fi

for folder in $imageName/$parent/*
do
  if [[ -d $folder ]] ;  then
    folderName="$(basename $folder)"
    if [[ "$folderName" != "_"* ]] ; then $@ "$prefix$folderName" $recurse $imageName; fi
  fi
done
