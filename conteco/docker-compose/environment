#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="controlplane.soleco"
export CONTECO_DC_GLOBAL_STACKNAMES="controlplane"
export CONTECO_DC_GLOBAL_BOOTSTACKS=""
export CONTECO_DC_GLOBAL_RUNSTACKS="controlplane"
export CONTECO_DC_GLOBAL_VOLUME_LIST="conteco_dc_controlplane_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_CONTROLPLANE_NAME,$CONTECO_DC_CONTROLPLANE_ENVIRONMENT,$CONTECO_DC_CONTROLPLANE_NETWORKS,$CONTECO_DC_CONTROLPLANE_PORTS,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_CONTROLPLANE_ENVIRONMENT=
export CONTECO_DC_CONTROLPLANE_PORTS=
export CONTECO_DC_CONTROLPLANE_NETWORKS=
export CONTECO_DC_GLOBAL_NETWORKS=
# END GLOBAL SETTINGS

# START SETTINGS controlplane.modeco
export CONTECO_DC_CONTROLPLANE_COMMAND="keepalive:0"
export CONTECO_DC_CONTROLPLANE_VOLUMES="${DOLLAR}{CONTECO_TYPE}_conteco_dc_controlplane_volume:/conteco/pwd"
export CONTECO_DC_CONTROLPLANE_DEPLOY_LABELS=
export CONTECO_DC_CONTROLPLANE_DEPLOY_MODE="replicated"
export CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.0"
export CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="5m"
# END SETTINGS controlplane.modeco

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_TYPE}_conteco_dc_controlplane_volume: { external: true }"
# END TOPLEVEL SETTINGS
