#!/usr/bin/env bash
imageName="$1"
component="$2"
stack="$3"
method="$4"

if [[ "$component" == "." ]] ; then
  parent="soleco";
else
  parent="soleco/$component";
  prefix="$component/"
fi

for folder in $imageName/$parent/*
do
  if [[ -d $folder ]] ;  then
    folderName="$(basename $folder)"
    if [[ "$folderName" != "_"* ]] ; then run $method $prefix$folderName $stack $imageName; fi
  fi
done
