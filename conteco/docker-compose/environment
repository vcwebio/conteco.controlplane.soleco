#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="controlplane.soleco"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_controlplane"
export CONTECO_DC_GLOBAL_BOOTSTACKS=""
export CONTECO_DC_GLOBAL_RUNSTACKS="conteco_dc_controlplane"
export CONTECO_DC_GLOBAL_VOLUME_LIST="${DOLLAR}{CONTECO_STACKPREFIX}_controlplane_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_CONTROLPLANE_NAME,$CONTECO_DC_CONTROLPLANE_ENVIRONMENT,$CONTECO_DC_CONTROLPLANE_NETWORKS,$CONTECO_DC_CONTROLPLANE_PORTS,$CONTECO_DC_GLOBAL_NETWORKS,$CONTECO_DC_GLOBAL_VOLUMES'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_CONTROLPLANE_ENVIRONMENT=
export CONTECO_DC_CONTROLPLANE_PORTS=
export CONTECO_DC_CONTROLPLANE_NETWORKS=
export CONTECO_DC_GLOBAL_NETWORKS=
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_STACKPREFIX}_controlplane_volume: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS controlplane.modeco
export CONTECO_DC_CONTROLPLANE_COMMAND="keepalive:0"
export CONTECO_DC_CONTROLPLANE_VOLUMES="${CONTECO_STACKPREFIX}_controlplane_volume:/conteco/pwd"
export CONTECO_DC_CONTROLPLANE_LABELS=
export CONTECO_DC_CONTROLPLANE_DEPLOY_LABELS=
export CONTECO_DC_CONTROLPLANE_DEPLOY_REPLICAS=1
export CONTECO_DC_CONTROLPLANE_DEPLOY_PLACEMENT_CONSTRAINTS=
export CONTECO_DC_CONTROLPLANE_DEPLOY_MODE="replicated"
if [[ "${CONTECO_DC_CONTROLPLANE_DEPLOY_MODE}" == "replicated" ]] ; then export CONTECO_DC_CONTROLPLANE_DEPLOY_MODE_REPLICATED_REPLICAS="replicas: ${CONTECO_DC_CONTROLPLANE_DEPLOY_REPLICAS}"; else export CONTECO_DC_CONTROLPLANE_DEPLOY_MODE_REPLICATED_REPLICAS= ; fi
export CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.0"
export CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="5m"
# END SETTINGS controlplane.modeco

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
